[
  {
    "name": "pause",
    "disp": true,

    "model": "button",

    "active": true,
    "event_message": "pause-agree",

    "text": "√ù",
    "font": "icon",
    "size": 0.6,
    "spacing": 0.1,
    "chara_split": 1,
    "pos": [ 0.2, -0.2, 0 ],
    "origin": "top-left",
    "layout": "top-left",
    "base_color": [ 1, 1, 1 ],
    "text_color": [ 0.1, 0.1, 1 ],
    
    "tween": {
      "tween-in": {
        "body": [
          {
            "target": "scale",
            "type": "EaseOutBack",
            "duration": 0.3,
            "delay": 0.1,
            "start": [ 0, 0, 0 ]
          }
        ]
      },
      
      "tween-out": {
        "body": [
          {
            "target": "scale",
            "type": "EaseInExpo",
            "duration": 0.3,
            "end": [ 0, 0, 0 ]
          }
        ]
      },

      
      "tween-touch-in": {
        "body": [
          {
            "target": "scale",
            "type": "EaseOutExpo",
            "duration": 0.4,
            "end": [ 0.9, 0.9, 0.9 ]
          },
          {
            "target": "base_color",
            "type": "EaseOutExpo",
            "duration": 0.4,
            "end": [ 0.25, 0.25, 1 ]
          },
          {
            "target": "text_color",
            "type": "EaseOutExpo",
            "duration": 0.4,
            "end": [ 1, 1, 1 ]
          }
        ]
      },

      "tween-touch-out": {
        "body": [
          {
            "target": "scale",
            "type": "EaseOutExpo",
            "duration": 0.25,
            "end": [ 1, 1, 1 ]
          },
          {
            "target": "base_color",
            "type": "EaseOutExpo",
            "duration": 0.25,
            "end": [ 1, 1, 1 ]
          },
          {
            "target": "text_color",
            "type": "EaseOutExpo",
            "duration": 0.25,
            "end": [ 0.1, 0.1, 1 ]
          }
        ]
      },

      "tween-touch-end": {
        "body": [
          {
            "target": "scale",
            "type": "EaseOutElastic",
            "duration": 0.6,
            "start": [ 0.3, 0.3, 0.3 ],
            "end": [ 1.25, 1.25, 1.25 ]
          }
        ]
      }
    }
  },

  {
    "name": "play-time",
    "disp": true,

    "text": "00:00.0",
    "size": 0.4,
    "spacing": 0.04,
    "chara_split": 1,
    "pos": [ -0.1, 0.1, 0 ],
    "origin": "bottom-right",
    "layout": "bottom-right",
    "base_color": [ 0.1, 0.1, 0.1 ],
    "text_color": [ 1, 1, 1 ],

    "tween": {
      "tween-in": {
        "body": [
          {
            "target": "rotate",
            "type": "EaseOutElastic",
            "duration": 1.2,
            "interval": 0.05,
            "start": -120,
            "end": 0
          }
        ]
      },
      
      "tween-out": {
        "body": [
          {
            "target": "rotate",
            "type": "EaseInExpo",
            "duration": 0.5,
            "delay": 0.05,
            "interval": 0.05,
            "end": -120
          }
        ]
      }
    }
  }
]
