{
  "app": {
    "size": [ 960, 640 ],
    "background": [ 0.2, 0.2, 0.2 ],

    "fonts": [
      {
        "name": "medium",
        "path": "mplus-1m-medium.ttf",
        "default": true,
        "size": 48
      },
      {
        "name": "icon",
        "path": "WebSymbolsLiga-Regular.otf",
        "size": 48
      }
    ],
    
    "fast_speed": 3,
    "slow_speed": 0.25
  },

  "ui_view": {
    "camera": {
      "fov": 20,
      "near_z": 0.05,
      "far_z":  500,
    
      "eye_point": [ 0, 0, 20 ]
    },

    "lights": [
      {
        "pos": [ 0, 0, 10 ],
        
        "constant_attenuation":  0,
        "linear_attenuation":    0,
        "quadratic_attenuation": 0.015,
        
        "diffuse": [ 0.8, 0.8, 0.8 ],
        "ambient": [ 0.2, 0.2, 0.2 ],
        "specular": [ 0.1, 0.1, 0.1 ]
      }
    ]
  },
  
  "game_view": {
    "camera": {
      "fov": 30,
      "near_z": 0.1,
      "far_z":  500,

      "eye_point": [ -7, 12, -8 ],
      "interest_point": [ 0.5, 0.5, 0.5 ],
      "target_point": [ 3, 1, 1 ],
      "eye_distance": 15,
      "eye_ry": -140,
      "eye_rx": -40,

      "speed": 1
    },

    "lights": [
      {
        "pos": [ 3, 10, 1 ],
        
        "constant_attenuation":  0,
        "linear_attenuation":    0,
        "quadratic_attenuation": 0.015,
        
        "diffuse": [ 0, 0, 0.84 ],
        "ambient": [ 0, 0, 0.13 ],
        "specular": [ 0, 0, 0.13 ]
      },
      {
        "pos": [ -2, -5, -2 ],
        
        "constant_attenuation":  0,
        "linear_attenuation":    0,
        "quadratic_attenuation": 0.015,
        
        "diffuse": [ 240, 0.49, 0.2 ],
        "ambient": [ 0, 0, 0 ],
        "specular": [ 0, 0, 0.13 ]
      }
    ],

    "stagecolor": [ 0, 0, 0.5 ],
    "stagecolor_ease": "EaseOutQuad",
    "stagecolor_duration": 2,
    
    "move_threshold": 0.8,
    "move_speed_rate": 0.25
  },

  
  "game": {
    "cube_size": 1,

    "cube_stage_color": [
      [ 1, 1, 1 ],
      [ 0.6, 0.6, 0.6 ]
    ],

    "cube_line_color": [ 359, 1, 0.7 ],
    "stage_color": [ 0, 0, 0.6 ],

    "finish_rate": 0.1,

    "total_stage_num": 10,
    
    "stage": {
      "build_speed": 1,
      "collapse_speed": 1,
      "auto_collapse": 5,

      "build_ease": "EaseOutQuad",
      "build_duration": 1.5,
      "build_y": [ 10, 15 ],
      
      "collapse_ease": "EaseInQuad",
      "collapse_duration": 1.5,
      "collapse_y": [ -10, -15 ],

      "open_ease" : "EaseOutQuad",
      "open_duration": 0.5,
      "open_delay": 4
    },

    "pickable": {
      "entry_z": 1,
      "entry_start_delay": 2,
      "entry_next_delay": 3,
      
      "entry_ease": "EaseOutQuad",
      "entry_duration": 1.5,
      "entry_y": [ 15, 18 ],

      "color": [ 0, 0, 1 ],

      "rotate_ease": "EaseInQuad",
      "rotate_duration": 0.5,
      "rotate_speed_rate": [ 1, 0.8, 0.6, 0.4, 0.2 ],

      "fall_ease": "EaseInQuad",
      "fall_duration": 1.5,
      "fall_y": -10,

      "idle_ease": "EasePingPongOutQuad",
      "idle_duration": 0.5,
      "idle_angle": 15,
      "idle_delay": [ 2, 5 ],

      "picking_color": [ 240, 1, 1 ],
      "picking_start": {
        "ease": "EaseOutExpo",
        "duration": 0.2
      },
      "picking_end": {
        "ease": "EaseOutQuad",
        "duration": 0.5
      }
    },

    "item": {
      "size": 0.5,
      "color": [ 60, 0.5, 1 ],

      "entry_ease": "EaseOutQuad",
      "entry_duration": 1.5,
      "entry_y": [ 15, 18 ],

      "idle_tween": [
        {
          "target": "position",
          "type": "EaseInOutQuad",
          "start": [ 0, 0, 0 ],
          "end": [ 0, 0.5, 0 ],
          "duration": 1,
          "delay": 0.5,
          "loop": true,
          "ping-pong": true
        },
        {
          "target": "color",
          "type": "EaseInOutQuad",
          "start": [ 60, 0.5, 1 ],
          "end": [ 60, 0, 1 ],
          "duration": 0.5,
          "delay": 0.5,
          "loop": true,
          "ping-pong": true
        }
      ],
      
      "pickup_tween": [
        {
          "target": "position",
          "type": "EaseOutQuad",
          "end": [ 0, 2, 0 ],
          "duration": 0.25,
          "delay": 0.1
        }
      ],

      "pickup_delay": 0.2,
      "pickup_duration": 0.6,
      
      
      "fall_ease": "EaseInQuad",
      "fall_duration": 1.5,
      "fall_y": -10
    },

    "records": "records.json"
  },

  
  "sounds": [
    {
      "name": "title",
      "type": "buffer",
      "category": "se",
      "path": "title.mp4",
      "gain": 1,
      "loop": false
    },
    {
      "name": "cube-moved",
      "type": "buffer",
      "category": "cube-se",
      "path": "cube_rotate.mp4",
      "gain": 1,
      "loop": false
    },
    {
      "name": "start",
      "type": "buffer",
      "category": "stage-se",
      "path": "start.mp4",
      "gain": 1,
      "loop": false
    },
    {
      "name": "agree",
      "type": "buffer",
      "category": "ui-se",
      "path": "agree.mp4",
      "gain": 1,
      "loop": false
    }
  ]
}
