{
  "app": {
    "size": [ 960, 640 ],
    "background": [ 0.2, 0.2, 0.2 ],

    "fonts": [
      {
        "name": "medium",
        "path": "mplus-1m-medium.ttf",
        "default": true,
        "size": 48
      },
      {
        "name": "bold",
        "path": "mplus-1m-bold.ttf",
        "size": 48
      },
      {
        "name": "light",
        "path": "mplus-1m-light.ttf",
        "size": 48
      }
    ]
  },

  "ui_view": { 
    "fov": 20,
    "near_z": 0.05,
    "far_z":  500,
    
    "eye_point": [ 0, 0, 20 ],

    "lights": [
      {
        "pos": [ 0, 0, 10 ],
        
        "constant_attenuation":  0,
        "linear_attenuation":    0,
        "quadratic_attenuation": 0.015,
        
        "diffuse": [ 0.8, 0.8, 0.8 ],
        "ambient": [ 0.2, 0.2, 0.2 ],
        "specular": [ 0.1, 0.1, 0.1 ]
      }
    ]
  },
  
  "game_view": {
    "fov": 30,
    "near_z": 0.05,
    "far_z":  1000,

    "eye_point": [ -5, 13, -5 ],
    "interest_point": [ 3, 0, 2 ],

    "lights": [
      {
        "pos": [ 5, 10, 5 ],
        
        "constant_attenuation":  0,
        "linear_attenuation":    0,
        "quadratic_attenuation": 0.015,
        
        "diffuse": [ 0.8, 0.8, 0.8 ],
        "ambient": [ 0.2, 0.2, 0.2 ],
        "specular": [ 0.1, 0.1, 0.1 ]
      }
    ],

    "move_threshold": 0.8,
    "move_speed_rate": 0.25
  },

  
  "game": {
    "cube_size": 1,

    "cube_stage_color": [
      [ 0.5, 0.5, 0.5 ],
      [ 0.25, 0.25, 0.25 ]
    ],

    "cube_line_color": [ 1, 0, 0 ],

    "stage": {
      "build_speed": 1,
      "collapse_speed": 1,

      "build_ease": "EaseOutQuad",
      "build_duration": 1.5,
      "build_y": [ 10, 15 ],
      
      "collapse_ease": "EaseInQuad",
      "collapse_duration": 1.5,
      "collapse_y": [ -10, -15 ],

      "open_ease" : "EaseOutQuad",
      "open_duration": 0.5,
      "open_delay": 4
    },

    "pickable": {
      "entry_z": 1,
      "entry_start_delay": 2,
      "entry_next_delay": 3,
      
      "entry_ease": "EaseOutQuad",
      "entry_duration": 1.5,
      "entry_y": [ 10, 15 ],

      "color": [ 1, 1, 1 ],

      "rotate_ease": "EaseInQuad",
      "rotate_duration": 0.5,
      "rotate_speed_rate": [ 1, 0.8, 0.6, 0.4, 0.2 ],

      "fall_ease": "EaseInQuad",
      "fall_duration": 1.5,
      "fall_y": -10
    }
  }
}
